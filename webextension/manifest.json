{
	"manifest_version": 2,
	"default_locale": "en",
	
	"name":        "Smart Referer",
	"description": "__MSG_extension_description__",
	
	"version": "0.2",
	"homepage_url": "https://github.com/meh/smart-referer",
	"icons": {
		"256": "icon.svg"
	},
	
	"applications": {
		"gecko": {
			"id": "smart-referer@meh.paranoid.pk",
			"strict_min_version": "52.0"
		}
	},

	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		
		"http://*/*",
		"https://*/*"
	],

	"options_ui": {
		"page": "options.html"
	},
	
	"browser_action": {
		"default_icon":  "icon.svg",
		"default_title": "Smart Referer",
		"browser_style": true
	},

	"background": {
		"scripts": [
			"deps/public-suffix-list/dist/psl.js",
			
			"icon.js",
			"policy.js",
			"main.js"
		]
	}
}
